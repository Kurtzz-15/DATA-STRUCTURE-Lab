#include <iostream>
using namespace std;

int main() {
    int grade, courseCode;

    cout << "Enter grade: ";
    cin >> grade;

    cout << "Enter course code (1-3): ";
    cin >> courseCode;

    if (grade >= 75) {
        cout << "Result: Pass" << endl;
    } else {
        cout << "Result: Fail" << endl;
    }

    switch (courseCode) {
        case 1:
            cout << "Course: Computer Programming" << endl;
            break;
        case 2:
            cout << "Course: Data Structures" << endl;
            break;
        case 3:
            cout << "Course: Algorithms" << endl;
            break;
        default:
            cout << "Invalid course code." << endl;
    }

    return 0;
}
